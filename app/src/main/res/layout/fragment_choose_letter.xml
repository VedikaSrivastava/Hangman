<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        >

        <Button
            android:id="@+id/button_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            style="?android:attr/buttonBarButtonStyle"
            android:text="Hint"
            android:drawableLeft="@drawable/hint_icon"/>

        <Button
            android:id="@+id/button_new_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Word" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/choose"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >
        <TextView
            android:id="@+id/text_hint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="15sp"
            android:textColor="#FFA500"
            android:textAlignment="center"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Choose a letter:"
            android:textSize="20sp"
            android:layout_marginTop="5dp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:weightSum="3.3"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/button_q"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="Q" />

            <Button
                android:id="@+id/button_w"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="W" />

            <Button
                android:id="@+id/button_e"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="E"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                />

            <Button
                android:id="@+id/button_r"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="R" />

            <Button
                android:id="@+id/button_t"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"

                android:text="T" />

            <Button
                android:id="@+id/button_y"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="Y" />

            <Button
                android:id="@+id/button_u"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="U" />

            <Button
                android:id="@+id/button_i"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="I" />

            <Button
                android:id="@+id/button_o"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="O" />

            <Button
                android:id="@+id/button_p"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="P" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/button_a"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="A" />

            <Button
                android:id="@+id/button_s"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="S" />

            <Button
                android:id="@+id/button_d"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="D" />

            <Button
                android:id="@+id/button_f"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="F" />

            <Button
                android:id="@+id/button_g"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="G" />

            <Button
                android:id="@+id/button_h"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="H" />

            <Button
                android:id="@+id/button_j"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="J" />

            <Button
                android:id="@+id/button_k"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="K" />

            <Button
                android:id="@+id/button_l"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="L" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.1"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:weightSum="10">

            <Button
                android:id="@+id/button_z"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="Z" />

            <Button
                android:id="@+id/button_x"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="X" />

            <Button
                android:id="@+id/button_c"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="C" />

            <Button
                android:id="@+id/button_v"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="V" />

            <Button
                android:id="@+id/button_b"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="B" />

            <Button
                android:id="@+id/button_n"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="N" />

            <Button
                android:id="@+id/button_m"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="1dp"
                android:padding="0dp"
                android:text="M" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/result"
        android:layout_height="175dp"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="5dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:id="@+id/wonText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Game Over!! You Won!!"
            android:drawableRight="@drawable/celebration"
            android:gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/lostText"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Game Over!! You Lost!!  "
            android:drawableRight="@drawable/rip"
            android:gravity="center"
            android:visibility="gone"/>

    </LinearLayout>

