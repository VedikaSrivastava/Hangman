<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_game"
        android:name="com.example.hangman.GameFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_choose_letter"
        android:name="com.example.hangman.ChooseLetterFragment"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragment_hint"
        android:name="com.example.hangman.HintFragment"
        android:layout_width="match_parent"
        android:layout_height="100dp" />

</LinearLayout>